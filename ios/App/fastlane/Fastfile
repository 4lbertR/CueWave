default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    match(
      type: "development", # or "appstore" if releasing
      git_url: "https://github.com/your-org/certificates-repo" # <-- update this
    )

    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_PRIVATE_KEY"]
    )

    build_app(
      scheme: "App",
      export_method: "app-store",
      xcargs: "DEVELOPMENT_TEAM=#{ENV['DEVELOPMENT_TEAM']} SDKROOT=iphoneos IPHONEOS_DEPLOYMENT_TARGET=17.0 -allowProvisioningUpdates",
      output_directory: "build"
    )

    upload_to_testflight(api_key: api_key)
  end
end